@using OnlineShopWebApp.Models

@model Authorization

@{
    ViewData["Title"] = "Войти";
}
<div class="validation" asp-validation-summary="ModelOnly"></div>
<div class="container align-content-center">
    <div class="row text-center">
        <div class="col-4 mx-auto">
            <h2>Авторизируйтесь</h2>
            <form asp-action="Authorize" asp-controller="Authorization">
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl"/>
                <div class="mb-3">
                    <input class="form-control" asp-for="Name" placeholder="Введите имя">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <input class="form-control" asp-for="Password" placeholder="Введите пароль">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="true" name="rememberme">
                    <label class="form-check-label">
                        Запомнить меня?
                    </label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-outline-dark" asp-controller="Authorization" asp-action="Authorize">Войти</button>
                </div>

            </form>
            <div class="mb-3 p-3 text-center">
                <a class="card-link text-dark" asp-controller="Registration" asp-action="Index" asp-route-returnUrl="@Model.ReturnUrl">Регистрация нового пользователя</a>
            </div>
        </div>
    </div>
</div>
