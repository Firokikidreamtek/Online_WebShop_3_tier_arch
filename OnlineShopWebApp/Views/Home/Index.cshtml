@model IEnumerable<ProductViewModel>

<div class="row">
    @foreach (ProductViewModel p in Model)
    {
        <div class="col-3 card shadow">
            <img class="card-card-img-top" src="@p.ImgPath">
            <div class="card-body">
                <a style="color:black" asp-area="" asp-controller="product" asp-action="index" asp-route-id="@p.Id">
                    <h5>@p.Name</h5>
                </a>
                <h5>@p.Cost руб.</h5>
                <a class="btn btn-dark" asp-area="" asp-controller="cart" asp-action="add" asp-route-productId="@p.Id" role="button">
                    Добавить в корзину
                </a>
            </div>
        </div>
    }
</div>