@using ViewModels

@model ProductViewModel

@{
    ViewData["Title"] = "Добавление нового продукта";
}

<div class="validation" asp-validation-summary="ModelOnly"></div>

<div class="container align-content-center">
    <div class="row text-center">
        <div class="col-4 mx-auto">
                <h2>Введите данные продукта</h2>
            <form asp-action="EditProduct" asp-area="admin" asp-controller="Product">
                <div>
                    <input class="form-control" rows="1" name="id" hidden value="@Model.Id">
                </div>
                <div class="mb-3">
                    <input class="form-control" asp-for="Name" placeholder="Введите новое название продукта" value="@Model.Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <input class="form-control" asp-for="Cost" placeholder="Введите новую стоимость продукта" value="">
                    <span asp-validation-for="Cost"></span>
                </div>
                <div class="mb-3">
                    <input class="form-control" asp-for="Description" placeholder="Введите новое описание продукта" value="@Model.Description">
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-outline-dark" asp-area="admin" asp-controller="product" asp-action="editproduct">Добавить отредактированный продукт</button>
                </div>
            </form>
        </div>
    </div>
</div>
